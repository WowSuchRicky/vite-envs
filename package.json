{
    "name": "vite-envs",
    "version": "3.2.3",
    "description": "Script for embedding server variable in CRA apps without having to rebuild.",
    "repository": {
        "type": "git",
        "url": "git://github.com/garronej/vite-envs.git"
    },
    "scripts": {
        "build": "tsc && yarn grant-exec-perms",
        "grant-exec-perms": "node dist/tools/grant-exec-perms.js",
        "link-in-app": "ts-node --skipProject scripts/link-in-app.ts",
        "link-in-starter": "yarn link-in-app vite-envs-starter",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "yarn _format --write",
        "format:check": "yarn _format --list-different"
    },
    "bin": {
        "vite-envs": "dist/bin/vite-envs.js"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./*": "./dist/*.js"
    },
    "lint-staged": {
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/garronej",
    "license": "MIT",
    "files": [
        "src/",
        "dist/",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [
        "react",
        "create-react-app",
        "environment-variables",
        "typescript"
    ],
    "homepage": "https://github.com/garronej/vite-envs",
    "peerDependencies": {
        "vite": "*"
    },
    "dependencies": {
        "cheerio": "^1.0.0-rc.12",
        "dotenv": "^16.4.4",
        "ejs": "^3.1.9",
        "json5": "^2.2.3",
        "tsafe": "^1.6.6"
    },
    "devDependencies": {
        "typescript": "^4.1.5",
        "@types/ejs": "^3.1.4",
        "@types/node": "^20.8.10",
        "ts-node": "^10.9.1",
        "vite": "^5.1.3",
        "prettier": "^2.8.8",
        "husky": "^4.3.8",
        "lint-staged": "^11.1.1"
    }
}
